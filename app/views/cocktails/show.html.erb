<div class="container">

  <div class="d-flex">
    <h1><%= @cocktail.name %></h1>
    <p class="ml-3 mt-3">
      <%= link_to cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fa fa-trash-alt ml-1"></i>
      <% end %>
    </p>
  </div>

  <p><strong>Here's what you'll need:</strong></p>
  <ul>
    <% @cocktail.doses.each do |dose|%>
      <li>
        <strong><%= dose.ingredient.name %></strong> -
        <%= dose.description %>
        <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fa fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>
  </ul>

  <p class="btn btn-outline-primary"><%= link_to "Add an ingredient!", new_cocktail_dose_path(@cocktail) %></p>
  <p class="btn btn-outline-primary"><%= link_to "See all yummy Cocktails", cocktails_path %></p>
</div>



